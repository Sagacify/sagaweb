<%- include partials/top.ejs %>

  <section class="careers">
    <div class="wrapper">
      <div class="keymessage">
      <h2 class="keymessage--keyphrase">Careers</h2>
      <h3 class="keymessage--tagline">If you think you might be a good fit for us, give us a shout out!</h3>
    </div>
      <div class="onepositioncontent">
        <article class="onepositioncontent--article">
          <figure class="onepositioncontent--article--figure">
            <img src="img/dev/blogpost-pic.jpg" alt="">
